{
  "name": "job-scheduler-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:api\" \"npm run start:worker\"",
    "start:api": "npm run start --workspace=apps/api",
    "start:worker": "npm run start --workspace=apps/worker"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
